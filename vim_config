" VIM setting file

" UFT8 encoding
set encoding=utf8

" Show line number
set nu

" Disable clipboard
set clipboard=

" Match brackets
set showmatch

" Syntax highlighting
syntax enable

" 1 Tab == 4 spaces
set expandtab
set smarttab
set tabstop=4
set shiftwidth=4

" Disable temporary files
set nobackup
set nowb
set noswapfile
set viminfo=
set noundofile
