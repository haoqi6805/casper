" VIM 配置文件

set encoding=utf8    " UFT8编码
set nu               " 显示行号
set clipboard=       " 禁用剪贴板
set showmatch        " 括号匹配
syntax enable        " 语法高亮

" 1 Tab == 4 spaces
set expandtab
set smarttab 
set tabstop=4
set shiftwidth=4

" 禁用各类临时文件
set nobackup
set nowb
set noswapfile
set viminfo=
set noundofile
