" VIM 配置文件
" 用法：cp vim_config ～/.vimrc

" UFT8编码
set encoding=utf8

" 显示行号
set nu

" 禁用剪贴板
set clipboard=

" 括号匹配
set showmatch

" 语法高亮
syntax enable

" 1 Tab == 4 spaces
set expandtab
set smarttab
set tabstop=4
set shiftwidth=4

" 禁用各类临时文件
set nobackup
set nowb
set noswapfile
set viminfo=
set noundofile
